# Environment
NODE_ENV=development

# Server
PORT=3000
HOST=localhost

# Database
DATABASE_URL=postgresql://vsinnfo:vsinnfo_password@localhost:5432/vsinnfo_dev

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=24h

# API Mocks (true for development, false for production)
USE_API_MOCKS=true

# UAFE API (production only)
UAFE_API_URL=https://api.uafe.gob.ec
UAFE_API_KEY=

# OFAC API (production only)
OFAC_API_URL=https://api.treasury.gov/ofac
OFAC_API_KEY=

# ONU API (production only)
UN_API_URL=https://scsanctions.un.org/api

# File Storage
STORAGE_PATH=./storage
MAX_FILE_SIZE=10485760

# Encryption
ENCRYPTION_KEY=your-32-character-encryption-key-here-change-in-prod
ENCRYPTION_ALGORITHM=aes-256-gcm

# Logging
LOG_LEVEL=debug
LOG_FILE=./logs/vsinnfo.log

# Email (for notifications)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=noreply@vsinnfo.com

# Backup (cloud)
CLOUD_BACKUP_ENABLED=false
CLOUD_PROVIDER=s3
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
AWS_S3_BUCKET=vsinnfo-backups
